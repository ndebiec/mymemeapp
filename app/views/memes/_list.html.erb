<div class="row text-center">
    <% @memes.each do |meme| %>
      <div class="col-lg-3 col-md-4 col-xs-6 hor-spacing">
        <%= link_to meme_path(meme), class: 'd-block mb-4' do %>
          <%= image_tag meme.picture.url, class: 'img-fluid img-thumbnail mini', alt: 'caption' %>
        <% end %>
      </div>
    <% end %>
</div>