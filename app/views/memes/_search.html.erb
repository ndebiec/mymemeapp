<div class="row">
<%= form_tag(memes_path, method: :get, id: 'meme-search') do %>
  <div class="form-group row no-padding col-md-8 align:center">
    <div class = "col-md-10">
      <%= text_field_tag :caption, params[:caption], class: 'form-control'  %>
    </div>
    <div class="col-md-2">
      <%= button_tag(type: :submit, class: "btn btn-default", name: nil) do %>
        <i class="fa fa-search"></i> Search
      <% end %>
    </div>
  </div>
<% end %>
</div>