<%- model_class = Meme -%>
<div class="page-header">
  <h1><%= '#' + @hashtag %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:caption) %></th>
      <th><%= model_class.human_attribute_name(:picture) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @memes.each do |meme| %>
      <tr>
      <td><%= link_to meme.caption, meme_path(meme) %></td>
      <td><%= image_tag meme.picture.url, height: 100  %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      meme_path(meme), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_meme_path(meme), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      meme_path(meme),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_meme_path,
            :class => 'btn btn-primary' %>
