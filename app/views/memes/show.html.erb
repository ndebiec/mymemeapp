<%- model_class = Meme -%>
<dl class="dl-horizontal">
  <dt></dt>
  <dd> <%= image_tag @meme.picture.url, width: 500  if @meme.picture?%> </dd>
  <dt><strong><%= model_class.human_attribute_name(:caption) %>:</strong></dt>
  <dd> <%= @meme.caption %>
  <% if @meme.extracted_hashtags.present? %>
  <dt><strong><%= model_class.human_attribute_name(:hashtags) %>:</strong></dt>
  <dd><%= render_with_hashtags(@meme.extracted_hashtags) %></dd>
  <% end %>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              memes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_meme_path(@meme), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              meme_path(@meme),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
