<% if current_user %>
  <% controller.redirect_to memes_path %>
<% else %>
  <div class="jumbotron">
    <h2>Your Online Meme Storage</h2>
    <ul class="feature-list">
      <li> Upload your memes</li>
      <li> Categorize them</li>
      <li> Reach for them from any device</li>
    </ul>
    <p id="signup-button">
      <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary btn-lg sign-up-btn' %>
    </p>
  </div>
<% end %>
